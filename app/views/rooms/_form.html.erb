


<div class="container">
  <div class="row">
    <div class="col-lg">
      <%= simple_form_for @room do |form| %>
        <%= form.input :name %>

        <table>
          <tr>
                  <td style= "padding-bottom: 20px">  <%= form.submit "Save", class: 'btn btn-success' %></td>
          </tr>

          <tr>
            <td style= "padding-bottom: 20px">
                <%= link_to 'Back', rooms_path, class: 'btn btn-primary' %><br>
            </td>
          </tr>

        </table>
      <% end %>
    </div>
  </div>
</div>
